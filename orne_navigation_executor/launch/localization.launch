<?xml version="1.0"?>

<launch>
  <arg name="robot_name"    default="alpha"/>
  <arg name="map_file"      default="$(find orne_navigation_executor)/maps/mymap"/>
  <arg name="init_pos_file" default="$(find orne_navigation_executor)/initial_pose/initial_pose.yaml"/>
  <arg name="localization_pkg" default="amcl"/>

  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file).yaml"/>

  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <rosparam file="$(find orne_navigation_executor)/config/param/localization_params.yaml" command="load"/>
    <rosparam file="$(find orne_navigation_executor)/config/param/localization_params_$(arg robot_name).yaml" command="load"/>
    <rosparam file="$(arg init_pos_file)" command="load"/>
  </node>
</launch>
